<%- include('../layout/main', { body: `
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">${hero.title}</h1>
                <p class="hero-subtitle">${hero.subtitle}</p>
                <div class="hero-actions">
                    <a href="${hero.ctaLink}" class="btn btn-primary btn-large">${hero.ctaText}</a>
                    <a href="/entreprise/contact" class="btn btn-outline btn-large">Demander un devis</a>
                </div>
            </div>
            <div class="hero-image">
                <img src="${hero.image}" alt="Formation professionnelle" />
            </div>
        </div>
    </section>

    <!-- Statistiques -->
    <section class="stats-section">
        <div class="stats-container">
            <div class="stat-item">
                <div class="stat-number">${stats.etudiants.toLocaleString()}</div>
                <div class="stat-label">√âtudiants form√©s</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">${stats.formations}</div>
