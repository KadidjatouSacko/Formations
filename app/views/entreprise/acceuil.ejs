            </div>
            <div class="stat-item">
                <div class="stat-number">${stats.entreprises}</div>
                <div class="stat-label">Entreprises partenaires</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">${stats.satisfaction}/5</div>
                <div class="stat-label">Satisfaction moyenne</div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section class="services-section">
        <div class="section-header">
            <h2 class="section-title">Nos services</h2>
            <p class="section-subtitle">Des solutions adapt√©es √† vos besoins</p>
        </div>
        
        <div class="services-grid">
            <% services.forEach(service => { %>
                <div class="service-card">
                    <div class="service-icon">${service.icon}</div>
                    <h3 class="service-title">${service.title}</h3>
                    <p class="service-description">${service.description}</p>
                    <ul class="service-features">
                        <% service.features.forEach(feature => { %>
                            <li>‚úì ${feature}</li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
