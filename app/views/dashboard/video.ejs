        function simulateVideoProgress() {
            if (!isPlaying) return;
            
            const interval = setInterval(() => {
                if (!isPlaying || currentTime >= duration) {
                    clearInterval(interval);
                    if (currentTime >= duration) {
                        onVideoComplete();
                    }
                    return;
                }
                
                currentTime += 1;
                const progressPercent = (currentTime / duration) * 100;
