            // D√©bloquer le module suivant
            const nextModule = document.querySelector('.module-item:not(.active):not(.completed)');
            if (nextModule) {
                nextModule.classList.remove('locked');
                const icon = nextModule.querySelector('.module-icon');
                icon.textContent = 'üìñ';
                icon.style.background = 'var(--gradient-blue)';
            }
        }

        // Gestion de la progression de lecture
        function updateReadingProgress(percent) {
            const progressBar = document.getElementById('readingProgress');
            progressBar.style.width = percent + '%';
        }

        // Navigation entre modules
        document.getElementById('prevModule').addEventListener('click', () => {
            if (moduleData.currentModule > 1) {
                showToast('‚¨ÖÔ∏è Retour au module pr√©c√©dent...');
                setTimeout(() => {
                    window.location.href = `/dashboard/formation/${moduleData.formation.slug}?module=${moduleData.currentModule - 1}`;
                }, 1000);
            }
        });

        document.getElementById('nextModule').addEventListener('click', () => {
            if (currentTime < duration * 0.8) {
                showToast('‚ö†Ô∏è Veuillez terminer au moins 80% du module avant de continuer.');
                return;
            }
            
            if (moduleData.currentModule < moduleData.totalModules) {
                showToast('‚û°Ô∏è Passage au module suivant...');
                setTimeout(() => {
                    window.location.href = `/dashboard/formation/${moduleData.formation.slug}?module=${moduleData.currentModule + 1}`;
                }, 1000);
            } else {
                showToast('üéâ Formation termin√©e ! Bravo !');
                setTimeout(() => {
                    window.location.href = `/dashboard`;
                }, 2000);
            }
        });

        // Fonction toast
        function showToast(message) {
            const toast = document.createElement('div');
            toast.style.cssText = `
                position: fixed;
                top: 2rem;
                right: 2rem;
                background: var(--text-dark);
                color: white;
                padding: 1rem 2rem;
                border-radius: 10px;
                z-index: 10000;
                animation: slideIn 0.3s ease;
            `;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Actions des boutons
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const btnText = btn.textContent.trim();
                
                switch(true) {
                    case btnText.includes('Notes'):
                        showToast('üìã Bloc-notes ouvert (fonctionnalit√© √† d√©velopper)');
                        break;
                    case btnText.includes('Marquer'):
                        showToast('üîñ Page marqu√©e comme favorite');
                        btn.style.background = 'var(--light-blue)';
                        btn.style.color = 'var(--primary-blue)';
                        break;
                    case btnText.includes('R√©sum√©'):
                        showToast('üìÑ R√©sum√© du module disponible');
                        break;
                    case btnText.includes('Quiz'):
                        showToast('üìù Quiz de validation (√† impl√©menter)');
                        break;
                }
            });
        });

        // Navigation des modules dans la sidebar
        document.querySelectorAll('.module-item').forEach((module, index) => {
            module.addEventListener('click', () => {
                if (!module.classList.contains('completed') && !module.classList.contains('active')) {
                    showToast('üîí Ce module sera d√©bloqu√© apr√®s avoir termin√© les pr√©c√©dents.');
                    return;
                }
                
                const moduleTitle = module.querySelector('.module-title').textContent;
                showToast(`üìñ Chargement du module: ${moduleTitle}`);
            });
        });

        // Initialisation
        document.addEventListener('DOMContentLoaded', () => {
            showToast(`üìö Module "${moduleData.formation.title}" charg√©`);
            updateReadingProgress(0);
        });

        console.log('üéì Lecteur de formation FormaPro+ initialis√©');
        console.log(`üìñ Formation: ${moduleData.formation.title}`);
        console.log(`üë§ Utilisateur: ${moduleData.user.name}`);
    </script>
