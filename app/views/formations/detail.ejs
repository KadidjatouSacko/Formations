<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-pink: #d4a5a5;
            --primary-blue: #a5c9d4;
            --light-pink: #f5e6e6;
            --light-blue: #e6f2f5;
            --soft-gray: #f8f9fa;
            --text-dark: #4a4a4a;
            --text-light: #8a8a8a;
            --white: #ffffff;
            --success: #28a745;
            --warning: #ffc107;
            --gradient-pink: linear-gradient(135deg, #f5e6e6, #d4a5a5);
            --gradient-blue: linear-gradient(135deg, #e6f2f5, #a5c9d4);
            --gradient-contact: linear-gradient(135deg, #d4a5a5, #a5c9d4);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
            background: var(--soft-gray);
        }

        /* Header */
        .header {
            background: var(--white);
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--text-dark);
        }

        .logo-icon {
            width: 50px;
            height: 50px;
            background: var(--gradient-contact);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: white;
            font-weight: 700;
            font-size: 1.3rem;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: 300;
            letter-spacing: 0.1em;
        }

        .logo-text .forma { color: var(--primary-pink); }
        .logo-text .pro { color: var(--primary-blue); font-weight: 600; }

        .nav-actions {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        /* Breadcrumb */
        .breadcrumb {
            background: var(--white);
            padding: 1rem 0;
            border-bottom: 1px solid var(--soft-gray);
        }

        .breadcrumb-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .breadcrumb-nav {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .breadcrumb-nav a {
            color: var(--text-light);
            text-decoration: none;
        }

        .breadcrumb-nav a:hover { color: var(--primary-blue); }
        .breadcrumb-current { color: var(--primary-pink); font-weight: 500; }

        /* Main Content */
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }

        /* Hero Section */
        .formation-hero {
            background: var(--gradient-pink);
            border-radius: 25px;
            padding: 4rem;
            margin-bottom: 3rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .formation-hero::before {
            content: '';
            position: absolute;
            top: -30%;
            right: -20%;
            width: 40%;
            height: 160%;
            background: var(--gradient-blue);
            border-radius: 50%;
            opacity: 0.3;
            transform: rotate(-15deg);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 3rem;
            align-items: center;
        }

        .formation-icon-large {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .formation-title-main {
            font-size: 3rem;
            font-weight: 300;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .formation-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .meta-tag {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 500;
            backdrop-filter: blur(10px);
        }

        .formation-description-main {
            font-size: 1.2rem;
            opacity: 0.9;
            line-height: 1.7;
            margin-bottom: 2rem;
        }

        .formation-price {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero-actions {
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 1.2rem 2.5rem;
            border: none;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--white);
            color: var(--primary-pink);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(255, 255, 255, 0.3);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Content Sections */
        .content-sections {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .content-section {
            background: var(--white);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-icon {
            font-size: 1.3rem;
        }

        /* Competences */
        .competences-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .competence-item {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            padding: 1rem;
            background: var(--soft-gray);
            border-radius: 12px;
            transition: all 0.3s;
        }

        .competence-item:hover {
            background: var(--light-blue);
            transform: translateX(5px);
        }

        .competence-icon {
            color: var(--primary-blue);
            font-weight: bold;
        }

        /* Formation Info */
        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid var(--soft-gray);
        }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-label {
            color: var(--text-light);
            font-weight: 500;
        }

        .info-value {
            font-weight: 600;
            color: var(--text-dark);
        }

        .certification-badge {
            background: var(--gradient-contact);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        /* Formations similaires */
        .similar-formations {
            margin-top: 4rem;
        }

        .similar-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .similar-card {
            background: var(--white);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transition: all 0.3s;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

        .similar-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.1);
        }

        .similar-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .similar-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }

        .similar-meta {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .hero-content {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .content-sections {
                grid-template-columns: 1fr;
            }

            .competences-grid {
                grid-template-columns: 1fr;
            }

            .similar-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .formation-hero {
                padding: 2rem;
            }

            .formation-title-main {
                font-size: 2rem;
            }

            .main-content {
                padding: 2rem 1rem;
            }
        }

        /* Animation */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.8s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="nav-container">
            <a href="/" class="logo">
                <div class="logo-icon">P+</div>
                <div class="logo-text">
                    <span class="forma">FORMA</span><span class="pro">PRO+</span>
                </div>
            </a>
            <div class="nav-actions">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="btn btn-secondary">Mon Dashboard</a>
                    <a href="/auth/logout" class="btn btn-primary">D√©connexion</a>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-secondary">Se connecter</a>
                    <a href="/formations/catalogue" class="btn btn-primary">Catalogue</a>
                <% } %>
            </div>
        </div>
    </header>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="breadcrumb-container">
            <nav class="breadcrumb-nav">
                <a href="/">Accueil</a>
                <span>‚Ä∫</span>
                <a href="/formations/catalogue">Catalogue</a>
                <span>‚Ä∫</span>
                <span class="breadcrumb-current"><%= formation.titre %></span>
            </nav>
        </div>
    </div>

    <main class="main-content">
        <!-- Hero Section -->
        <section class="formation-hero fade-in">
            <div class="hero-content">
                <div>
                    <div class="formation-icon-large"><%= formation.icon %></div>
                    <h1 class="formation-title-main"><%= formation.titre %></h1>
                    
                    <div class="formation-meta">
                        <span class="meta-tag"><%= formation.niveau %></span>
                        <span class="meta-tag"><%= formation.modules_count %> modules</span>
                        <span class="meta-tag"><%= formation.duree %></span>
                        <% if (formation.certifiante) { %>
                            <span class="meta-tag">üèÜ Certifiante</span>
                        <% } %>
                        <% if (formation.nouveau) { %>
                            <span class="meta-tag">üÜï Nouveau</span>
                        <% } %>
                    </div>
                    
                    <p class="formation-description-main"><%= formation.description %></p>
                    
                    <div class="formation-price">
                        <%= formation.prix === 0 ? 'Gratuit' : formation.prix + '‚Ç¨' %>
                        <% if (formation.prix_original) { %>
                            <span style="font-size: 1rem; text-decoration: line-through; opacity: 0.7;">
                                <%= formation.prix_original %>‚Ç¨
                            </span>
                        <% } %>
                    </div>

                    <div class="hero-actions">
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard/formation/<%= formation.id %>" class="btn btn-primary">
                                üöÄ Commencer la formation
                            </a>
                        <% } else { %>
                            <a href="/auth/login" class="btn btn-primary">
                                üîí Se connecter pour commencer
                            </a>
                        <% } %>
                        <button class="btn btn-secondary" onclick="scrollToContent()">
                            üìñ En savoir plus
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Sections -->
        <div class="content-sections">
            <div>
                <!-- Comp√©tences -->
                <section class="content-section fade-in">
                    <h2 class="section-title">
                        <span class="section-icon">üéØ</span>
                        Comp√©tences d√©velopp√©es
                    </h2>
                    <div class="competences-grid">
                        <% formation.competences.forEach(competence => { %>
                            <div class="competence-item">
                                <span class="competence-icon">‚úì</span>
                                <span><%= competence %></span>
                            </div>
                        <% }); %>
                    </div>
                </section>
            </div>

            <div>
                <!-- Informations formation -->
                <section class="content-section fade-in">
                    <h2 class="section-title">
                        <span class="section-icon">‚ÑπÔ∏è</span>
                        Informations
                    </h2>
                    
                    <div class="info-item">
                        <span class="info-label">Niveau requis</span>
                        <span class="info-value"><%= formation.niveau %></span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">Nombre de modules</span>
                        <span class="info-value"><%= formation.modules_count %> modules</span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">Dur√©e estim√©e</span>
                        <span class="info-value"><%= formation.duree %></span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">Domaine</span>
                        <span class="info-value"><%= formation.domaine %></span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">Certification</span>
                        <% if (formation.certifiante) { %>
                            <span class="certification-badge">üèÜ Certifiante</span>
                        <% } else { %>
                            <span class="info-value">Non certifiante</span>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>

        <!-- Formations similaires -->
        <% if (typeof formationsSimilaires !== 'undefined' && formationsSimilaires.length > 0) { %>
            <section class="similar-formations fade-in">
                <h2 class="section-title">
                    <span class="section-icon">üîó</span>
                    Formations similaires
                </h2>
                <div class="similar-grid">
                    <% formationsSimilaires.forEach(similar => { %>
                        <a href="/formations/<%= similar.id %>" class="similar-card">
                            <div class="similar-icon"><%= similar.icon %></div>
                            <h3 class="similar-title"><%= similar.titre %></h3>
                            <div class="similar-meta">
                                <%= similar.niveau %> ‚Ä¢ <%= similar.modules_count %> modules ‚Ä¢ <%= similar.duree %>
                            </div>
                            <p style="font-size: 0.9rem; color: var(--text-light);">
                                <%= similar.description.substring(0, 100) %>...
                            </p>
                        </a>
                    <% }); %>
                </div>
            </section>
        <% } %>
    </main>

    <script>
        function scrollToContent() {
            document.querySelector('.content-sections').scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Animation au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        console.log('üìñ Page de d√©tail formation charg√©e:', '<%= formation.titre %>');
    </script>
</body>
</html>