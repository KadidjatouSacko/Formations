<script>
        // Animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.animate-on-scroll').forEach(el => {
            observer.observe(el);
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.header');
            if (window.scrollY > 100) {
                header.style.padding = '0.75rem 0';
                header.style.boxShadow = 'var(--shadow-lg)';
            } else {
                header.style.padding = '1.5rem 0';
                header.style.boxShadow = 'var(--shadow-sm)';
            }
        });

        // Toast notification system
        function showToast(message, type = 'info', duration = 4000) {
            const toast = document.getElementById('toast');
            const icon = document.getElementById('toast-icon');
            const messageEl = document.getElementById('toast-message');
            
            messageEl.textContent = message;
            
            switch(type) {
                case 'success':
                    icon.className = 'fas fa-check-circle';
                    icon.style.color = '#16a085';
                    toast.style.borderLeftColor = '#16a085';
                    break;
                case 'error':
                    icon.className = 'fas fa-exclamation-circle';
                    icon.style.color = '#e74c3c';
                    toast.style.borderLeftColor = '#e74c3c';
                    break;
                case 'warning':
                    icon.className = 'fas fa-exclamation-triangle';
                    icon.style.color = '#f39c12';
                    toast.style.borderLeftColor = '#f39c12';
                    break;
                default:
                    icon.className = 'fas fa-info-circle';
                    icon.style.color = 'var(--primary-blue)';
                    toast.style.borderLeftColor = 'var(--primary-blue)';
            }
            
            toast.style.transform = 'translateX(0)';
            setTimeout(() => {
                toast.style.transform = 'translateX(400px)';
            }, duration);
        }

        // FAQ Toggle Function
        function toggleFAQ(index) {
            const answer = document.getElementById(`faq-answer-${index}`);
            const icon = document.getElementById(`faq-icon-${index}`);
            
            if (answer.style.maxHeight && answer.style.maxHeight !== '0px') {
                answer.style.maxHeight = '0px';
                icon.style.transform = 'rotate(0deg)';
            } else {
                // Close all other FAQs first
                document.querySelectorAll('.faq-answer').forEach((faqAnswer, i) => {
                    if (i !== index) {
                        faqAnswer.style.maxHeight = '0px';
                        document.getElementById(`faq-icon-${i}`).style.transform = 'rotate(0deg)';
                    }
                });
                
                answer.style.maxHeight = answer.scrollHeight + 'px';
                icon.style.transform = 'rotate(180deg)';
            }
        }

        // Module interactions
        document.querySelectorAll('.module-card').forEach(card => {
            card.addEventListener('click', function() {
                const moduleId = this.dataset.moduleId;
                const status = this.querySelector('.module-status').textContent.trim();
                const title = this.querySelector('.module-title').textContent;
                
                if (status === 'Disponible') {
                    showToast(`Ouverture du module : ${title}`, 'info');
                    setTimeout(() => {
                        window.location.href = `/formations/<%= formation.slug %>/module/${moduleId}`;
                    }, 1000);
                } else {
                    showToast('Module verrouillé. Terminez d\'abord les modules précédents.', 'warning');
                    this.style.transform = 'scale(0.98)';
                    this.style.filter = 'grayscale(50%)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                        this.style.filter = 'grayscale(0%)';
                    }, 300);
                }
            });

            card.addEventListener('mouseenter', function() {
                const status = this.querySelector('.module-status').textContent.trim();
                this.style.cursor = status === 'Disponible' ? 'pointer' : 'not-allowed';
            });
        });

        // Enrollment function
        async function enrollInFormation(formationId) {
            const btn = event.target;
            const originalHTML = btn.innerHTML;
            
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Inscription en cours...';
            
            showToast('Inscription en cours, veuillez patienter...', 'info');
            
            try {
                const response = await fetch(`/api/formations/${formationId}/enroll`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || ''
                    },
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showToast('Inscription réussie ! Redirection vers le premier module...', 'success');
                    btn.innerHTML = '<i class="fas fa-check"></i> Inscrit !';
                    btn.style.background = '#16a085';
                    
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                } else {
                    throw new Error(data.message || 'Erreur lors de l\'inscription');
                }
            } catch (error) {
                console.error('Erreur d\'inscription:', error);
                showToast(`Erreur : ${error.message}`, 'error');
                
                btn.disabled = false;
                btn.innerHTML = originalHTML;
            }
        }

        // Continue formation function
        function continueFormation(slug) {
            showToast('Chargement de votre formation...', 'info');
            setTimeout(() => {
                window.location.href = `/formations/${slug}/learn`;
            }, 1000);
        }

        // Preview function
        function showPreview() {
            showToast('Aperçu de la formation en cours de développement...', 'info');
            
            const previewModal = document.createElement('div');
            previewModal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.8);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10000;
                opacity: 0;
                transition: opacity 0.3s ease;
            `;
            
            previewModal.innerHTML = `
                <div style="background: white; border-radius: 20px; padding: 3rem; max-width: 600px; text-align: center; transform: scale(0.8); transition: transform 0.3s ease;">
                    <h3 style="color: var(--text-dark); margin-bottom: 1rem; font-size: 1.5rem;">Aperçu de la formation</h3>
                    <p style="color: var(--text-light); margin-bottom: 2rem; line-height: 1.6;">
                        Découvrez un extrait de cette formation exceptionnelle. 
                        L'aperçu complet avec vidéo sera bientôt disponible !
                    </p>
                    <button onclick="this.closest('div').parentElement.remove()" 
                            style="background: var(--gradient-contact); color: white; border: none; padding: 1rem 2rem; border-radius: 12px; font-weight: 600; cursor: pointer;">
                        Fermer
                    </button>
                </div>
            `;
            
            document.body.appendChild(previewModal);
            
            setTimeout(() => {
                previewModal.style.opacity = '1';
                previewModal.querySelector('div').style.transform = 'scale(1)';
            }, 10);
            
            previewModal.addEventListener('click', (e) => {
                if (e.target === previewModal) {
                    previewModal.remove();
                }
            });
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                window.location.href = '/formations/catalogue';
            }
            
            if (e.ctrlKey && e.key === 'Enter') {
                const enrollBtn = document.querySelector('.enrollment-btn');
                if (enrollBtn && !enrollBtn.disabled) {
                    enrollBtn.click();
                }
            }
        });

        // Enhanced module card interactions
        function setupModuleInteractions() {
            document.querySelectorAll('.module-card').forEach((card, index) => {
                card.setAttribute('tabindex', '0');
                card.setAttribute('role', 'button');
                
                card.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        card.click();
                    }
                });
                
                const status = card.querySelector('.module-status');
                if (status.textContent.trim() === 'Disponible') {
                    card.style.cursor = 'pointer';
                    
                    card.addEventListener('mouseenter', () => {
                        card.style.boxShadow = '0 8px 32px rgba(165, 201, 212, 0.3)';
                    });
                    
                    card.addEventListener('mouseleave', () => {
                        card.style.boxShadow = '';
                    });
                }
            });
        }

        setupModuleInteractions();

        // Performance and analytics
        function trackUserAction(action, details = {}) {
            const data = {
                action,
                details,
                timestamp: new Date().toISOString(),
                formation: '<%= formation.title %>',
                formationId: '<%= formation.id %>',
                url: window.location.href
            };
            
            console.log('User action tracked:', data);
            
            if (typeof gtag !== 'undefined') {
                gtag('event', action, {
                    event_category: 'Formation',
                    event_label: '<%= formation.title %>',
                    ...details
                });
            }
        }

        trackUserAction('page_view', {
            formation_category: '<%= formation.category %>',
            formation_level: '<%= formation.level %>',
            user_enrolled: <%= userEnrolled ? 'true' : 'false' %>
        });

        // Track scroll depth
        let maxScrollDepth = 0;
        window.addEventListener('scroll', () => {
            const scrolled = Math.round((window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100);
            if (scrolled > maxScrollDepth) {
                maxScrollDepth = scrolled;
                
                if ([25, 50, 75, 90].includes(scrolled)) {
                    trackUserAction('scroll_depth', { depth: scrolled });
                }
            }
        });

        // Error handling
        window.addEventListener('error', (e) => {
            console.error('JavaScript error:', e.error);
            showToast('Une erreur est survenue. Actualisez la page si nécessaire.', 'error');
            
            trackUserAction('javascript_error', {
                message: e.message,
                filename: e.filename,
                lineno: e.lineno
            });
        });

        // Network status
        window.addEventListener('online', () => {
            showToast('Connexion internet rétablie', 'success', 2000);
        });

        window.addEventListener('offline', () => {
            showToast('Mode hors ligne activé. Certaines fonctionnalités peuvent être limitées.', 'warning', 5000);
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Formation detail page loaded:', '<%= formation.title %>');
            
            setTimeout(() => {
                if (!sessionStorage.getItem('welcomeShown')) {
                    showToast('Page formation chargée avec succès !', 'success', 3000);
                    sessionStorage.setItem('welcomeShown', 'true');
                }
            }, 1500);
            
            const startTime = Date.now();
            window.addEventListener('beforeunload', () => {
                const timeSpent = Math.round((Date.now() - startTime) / 1000);
                trackUserAction('time_on_page', { seconds: timeSpent });
            });
        });

        // Performance monitoring
        if ('performance' in window) {
            window.addEventListener('load', () => {
                setTimeout(() => {
                    const navigation = performance.getEntriesByType('navigation')[0];
                    const loadTime = Math.round(navigation.loadEventEnd - navigation.fetchStart);
                    
                    console.log(`Page loaded in ${loadTime}ms`);
                    trackUserAction('page_performance', {
                        load_time: loadTime,
                        dom_content_loaded: Math.round(navigation.domContentLoadedEventEnd - navigation.fetchStart),
                        first_paint: Math.round(performance.getEntriesByType('paint')[0]?.startTime || 0)
                    });
                }, 0);
            });
        }

        // Accessibility enhancements
        function enhanceAccessibility() {
            const skipLink = document.createElement('a');
            skipLink.href = '#main-content';
            skipLink.textContent = 'Passer au contenu principal';
            skipLink.style.cssText = `
                position: absolute;
                top: -40px;
                left: 10px;
                background: var(--primary-blue);
                color: white;
                padding: 8px 16px;
                border-radius: 4px;
                text-decoration: none;
                font-weight: 600;
                z-index: 10001;
                transition: top 0.3s ease;
            `;
            skipLink.addEventListener('focus', () => {
                skipLink.style.top = '10px';
            });
            skipLink.addEventListener('blur', () => {
                skipLink.style.top = '-40px';
            });
            document.body.insertBefore(skipLink, document.body.firstChild);
            
            const mainContent = document.querySelector('.main-content');
            if (mainContent) {
                mainContent.setAttribute('id', 'main-content');
                mainContent.setAttribute('role', 'main');
            }
            
            document.querySelectorAll('button').forEach(btn => {
                if (!btn.getAttribute('aria-label') && !btn.getAttribute('aria-labelledby')) {
                    btn.setAttribute('aria-label', btn.textContent.trim());
                }
            });
        }

        enhanceAccessibility();

        // Feature detection and progressive enhancement
        function progressiveEnhancement() {
            if (!('IntersectionObserver' in window)) {
                document.querySelectorAll('.animate-on-scroll').forEach(el => {
                    el.classList.add('visible');
                });
            }
            
            if (!CSS.supports('display', 'grid')) {
                document.querySelectorAll('[style*="grid"]').forEach(el => {
                    el.style.display = 'block';
                });
            }
            
            if (!('fetch' in window)) {
                console.warn('Fetch API not supported. Some features may not work.');
                showToast('Votre navigateur est obsolète. Certaines fonctionnalités peuvent ne pas fonctionner.', 'warning', 8000);
            }
        }

        progressiveEnhancement();
    </script>
</body>
</html>