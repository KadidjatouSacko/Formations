                <a href="#" aria-label="Suivez-nous sur LinkedIn" title="LinkedIn">💼</a>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header>
        <nav role="navigation" aria-label="Navigation principale">
            <a href="/dashboard" class="logo" aria-label="Retour à l'accueil FormaPro+">
                <div class="logo-icon" aria-hidden="true">P+</div>
                <div class="logo-text">
                    <span class="forma">FORMA</span><span class="pro">PRO+</span>
                </div>
            </a>
            <ul class="nav-links">
                <li><a href="/dashboard/formations" aria-current="<%= currentPage === 'formations' ? 'page' : 'false' %>">Formations</a></li>
                <li><a href="/dashboard/financements">Financements</a></li>
                <li><a href="/dashboard/evenements">Événements</a></li>
                <li><a href="/dashboard/blog">Blog</a></li>
                <li><a href="/dashboard/contact" class="nav-cta">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="breadcrumb-container">
            <nav class="breadcrumb-nav" aria-label="Fil d'Ariane">
                <a href="/dashboard">🏠 Accueil</a>
                <span class="breadcrumb-separator" aria-hidden="true">›</span>
                <a href="/dashboard/formations">Formations</a>
                <span class="breadcrumb-separator" aria-hidden="true">›</span>
                <span class="breadcrumb-current" aria-current="page"><%= formation.title %></span>
            </nav>
        </div>
    </div>

    <div class="main-content">
        <!-- Left Column - Course Content -->
        <main class="content-column">
            <!-- Formation Header -->
            <section class="formation-header fade-in" aria-labelledby="formation-title">
                <div class="formation-hero">
                    <div class="formation-info">
                        <h1 id="formation-title"><%= formation.title %></h1>
                        <p class="formation-subtitle"><%= formation.subtitle %></p>
                        <p class="formation-description">
                            <%= formation.description %>
                        </p>
                        <div class="formation-meta">
                            <div class="meta-badge level">
                                📚 <span>Niveau <%= formation.level %></span>
                            </div>
                            <div class="meta-badge duration">
                                ⏱️ <span><%= formation.duration %></span>
                            </div>
                            <div class="meta-badge modules">
                                🎯 <span><%= formation.modules.length %> modules</span>
                            </div>
                            <div class="meta-badge rating">
                                ⭐ <span><%= formation.rating %>/5 (<%= formation.reviewCount %> avis)</span>
                            </div>
                        </div>
                    </div>
                    <div class="formation-icon-large" aria-hidden="true">
                        <%= formation.icon %>
                    </div>
                </div>
            </section>

            <!-- Course Content -->
            <section class="course-content fade-in" aria-labelledby="course-content-title">
                <h2 id="course-content-title" class="section-title">
                    <div class="section-icon" aria-hidden="true">📋</div>
                    Contenu de la formation
                </h2>
                <div class="modules-list" role="list">
                    <% formation.modules.forEach((module, index) => { %>
                        <article class="module-item" role="listitem" tabindex="0" 
                                 data-module-id="<%= module.id %>" 
                                 aria-describedby="module-<%= index %>-desc">
                            <div class="module-header">
                                <h3 class="module-title">
                                    <div class="module-number" aria-hidden="true"><%= index + 1 %></div>
                                    <%= module.title %>
                                </h3>
                                <div class="module-status <%= module.status.toLowerCase() %>" 
                                     aria-label="Statut du module: <%= module.status %>">
                                    <%= module.status === 'Available' ? 'Disponible' : 'Verrouillé' %>
                                </div>
                            </div>
                            <p id="module-<%= index %>-desc" class="module-description">
                                <%= module.description %>
                            </p>
                            <div class="module-details">
                                <% module.resources.forEach(resource => { %>
                                    <div class="module-detail">
                                        <span class="detail-icon" aria-hidden="true"><%= resource.icon %></span>
                                        <span><%= resource.label %></span>
                                    </div>
                                <% }) %>
                            </div>
                        </article>
                    <% }) %>
                </div>
            </section>

            <!-- Reviews Section -->
            <section class="reviews-section fade-in" aria-labelledby="reviews-title">
                <div class="reviews-header">
                    <h2 id="reviews-title" class="section-title">
                        <div class="section-icon" aria-hidden="true">💬</div>
                        Avis des apprenants
                    </h2>
                    <div class="rating-overview">
                        <div class="rating-score" aria-label="Note moyenne: <%= formation.rating %> sur 5"><%= formation.rating %></div>
                        <div class="rating-details">
                            <div class="stars" aria-hidden="true">
                                <% const fullStars = Math.floor(formation.rating); %>
                                <% const hasHalfStar = formation.rating % 1 >= 0.5; %>
                                <% for(let i = 0; i < fullStars; i++) { %>★<% } %>
                                <% if(hasHalfStar) { %>☆<% } %>
                            </div>
                            <div class="rating-count"><%= formation.reviewCount %> avis vérifiés</div>
                        </div>
                    </div>
                </div>

                <% formation.reviews.forEach((review, index) => { %>
                    <article class="review-item">
                        <div class="review-header">
                            <div class="reviewer-info">
                                <div class="reviewer-avatar" aria-hidden="true"><%= review.authorInitials %></div>
                                <div class="reviewer-details">
                                    <h4><%= review.authorName %></h4>
                                    <div class="role"><%= review.role %></div>
                                </div>
                            </div>
                            <div class="review-rating" aria-label="Note donnée: <%= review.rating %> sur 5">
                                <% for(let i = 0; i < review.rating; i++) { %>★<% } %>
                                <% for(let i = review.rating; i < 5; i++) { %>☆<% } %>
                            </div>
                        </div>
                        <p class="review-text">
                            "<%= review.text %>"
                        </p>
                    </article>
                <% }) %>
            </section>

            <!-- Related Courses -->
            <section class="related-courses fade-in" aria-labelledby="related-title">
                <h2 id="related-title" class="section-title">
                    <div class="section-icon" aria-hidden="true">🎯</div>
                    Formations recommandées
                </h2>
                <div class="related-grid">
                    <% relatedCourses.forEach(course => { %>
                        <article class="related-course" tabindex="0" 
                                 onclick="window.location.href='/dashboard/formation/<%= course.slug %>'"
                                 onkeypress="if(event.key==='Enter') window.location.href='/dashboard/formation/<%= course.slug %>'"
                                 role="button"
                                 aria-label="Voir la formation <%= course.title %>">
                            <div class="related-icon" aria-hidden="true"><%= course.icon %></div>
                            <h3 class="related-title"><%= course.title %></h3>
                            <div class="related-price"><%= course.price %></div>
                        </article>
                    <% }) %>
                </div>
            </section>
        </main>

        <!-- Right Sidebar -->
        <aside class="sidebar" aria-label="Informations sur la formation">
            <!-- Purchase Card -->
            <section class="purchase-card fade-in" aria-labelledby="purchase-title">
                <h2 id="purchase-title" class="sr-only">Inscription à la formation</h2>
                <div class="price-section">
                    <span class="price-current" aria-label="Prix: <%= formation.price %>"><%= formation.price %></span>
                    <% if(formation.originalPrice) { %>
                        <div class="price-original" aria-label="Prix original: <%= formation.originalPrice %>"><%= formation.originalPrice %></div>
                        <div class="price-save">🎉 Formation <%= formation.price === 'Gratuit' ? 'offerte' : 'en promotion' %></div>
                    <% } %>
                </div>

                <div class="purchase-features">
                    <ul class="feature-list">
                        <% formation.features.forEach(feature => { %>
                            <li class="feature-item">
                                <div class="feature-icon" aria-hidden="true">✓</div>
                                <span><%= feature %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>

                <div class="cta-buttons">
                    <% if(userEnrolled) { %>
                        <a href="/dashboard/formation/<%= formation.slug %>/learn" class="btn btn-primary" role="button">
                            🚀 Continuer la formation
                        </a>
                    <% } else { %>
                        <button class="btn btn-primary" 
                                onclick="enrollInCourse('<%= formation.id %>')"
                                aria-describedby="enroll-description">
                            🚀 <%= formation.price === 'Gratuit' ? 'Commencer maintenant' : 'S\'inscrire maintenant' %>
                        </button>
                        <p id="enroll-description" class="sr-only">
                            <%= formation.price === 'Gratuit' ? 'Commencer cette formation gratuite' : 'S\'inscrire à cette formation payante' %>
                        </p>
                    <% } %>
                    <a href="#course-content-title" class="btn btn-secondary" role="button">
                        📋 Voir le programme détaillé
                    </a>
                </div>
            </section>

            <!-- Instructor Card -->
            <section class="instructor-card fade-in" aria-labelledby="instructor-title">
                <h3 id="instructor-title" class="sr-only">Instructeur</h3>
                <div class="instructor-avatar" aria-hidden="true"><%= formation.instructor.avatar %></div>
                <h3 class="instructor-name"><%= formation.instructor.name %></h3>
                <p class="instructor-title"><%= formation.instructor.title %></p>
                <p class="instructor-bio">
                    <%= formation.instructor.bio %>
                </p>
            </section>

            <!-- Quick Stats -->
            <section class="instructor-card fade-in" aria-labelledby="stats-title">
                <h3 id="stats-title" class="instructor-name">📊 Statistiques</h3>
                <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1.5rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span>👥 Inscrits</span>
                        <strong style="color: var(--primary-pink);" aria-label="<%= formation.stats.enrolled %> inscrits"><%= formation.stats.enrolled.toLocaleString() %></strong>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span>🎯 Taux de réussite</span>
                        <strong style="color: var(--success);" aria-label="<%= formation.stats.successRate %>% de réussite"><%= formation.stats.successRate %>%</strong>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span>⏱️ Temps moyen</span>
                        <strong style="color: var(--primary-blue);" aria-label="Temps moyen: <%= formation.stats.averageTime %>"><%= formation.stats.averageTime %></strong>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span>🏆 Certifiés</span>
                        <strong style="color: var(--primary-pink);" aria-label="<%= formation.stats.certified %> certifiés"><%= formation.stats.certified.toLocaleString() %></strong>
                    </div>
                </div>
            </section>
        </aside>
    </div>

    <!-- Screen reader only content -->
    <div class="sr-only">
        <style>
            .sr-only {
                position: absolute !important;
                width: 1px !important;
                height: 1px !important;
                padding: 0 !important;
                margin: -1px !important;
                overflow: hidden !important;
                clip: rect(0, 0, 0, 0) !important;
                white-space: nowrap !important;
                border: 0 !important;
            }
        </style>
    </div>

    <script>
        // Animation au scroll avec IntersectionObserver
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Interactions des modules avec accessibilité
        document.querySelectorAll('.module-item').forEach(module => {
            // Support clavier
            module.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    handleModuleClick(module);
                }
            });

            // Support souris
            module.addEventListener('click', () => {
                handleModuleClick(module);
            });
        });

        function handleModuleClick(module) {
            const title = module.querySelector('.module-title').textContent.trim();
            const status = module.querySelector('.module-status').textContent;
            const moduleId = module.dataset.moduleId;
            
            if (status === 'Disponible') {
                // Annonce pour lecteurs d'écran
                announceToScreenReader(`Ouverture du module : ${title}`);
                
                // Redirection vers le module
                setTimeout(() => {
                    window.location.href = `/dashboard/formation/<%= formation.slug %>/module/${moduleId}`;
                }, 500);
            } else {
                announceToScreenReader(`Module verrouillé : ${title}. Terminez d'abord les modules précédents.`);
                
                // Focus visuel pour les utilisateurs voyants
                module.style.outline = '3px solid #dc3545';
                setTimeout(() => {
                    module.style.outline = '';
                }, 2000);
            }
        }

        // Fonction d'inscription
        function enrollInCourse(courseId) {
            const isEnrolling = true;
            const button = event.target;
            const originalText = button.textContent;
            
            // Désactiver le bouton pendant l'inscription
            button.disabled = true;
            button.textContent = '⏳ Inscription en cours...';
            button.setAttribute('aria-busy', 'true');
            
            announceToScreenReader('Inscription en cours, veuillez patienter');
            
            // Simuler l'appel API
            fetch(`/api/formations/${courseId}/enroll`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content')
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    announceToScreenReader('Inscription réussie ! Redirection vers le premier module.');
                    button.textContent = '✅ Inscrit !';
                    button.style.background = 'var(--success)';
                    
                    setTimeout(() => {
                        window.location.href = `/dashboard/formation/<%= formation.slug %>/learn`;
                    }, 1500);
                } else {
                    throw new Error(data.message || 'Erreur d\'inscription');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                announceToScreenReader('Erreur lors de l\'inscription. Veuillez réessayer.');
                
                button.disabled = false;
                button.textContent = originalText;
                button.removeAttribute('aria-busy');
            });
        }

        // Fonction pour annoncer aux lecteurs d'écran
        function announceToScreenReader(message) {
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'polite');
            announcement.setAttribute('aria-atomic', 'true');
            announcement.className = 'sr-only';
            announcement.textContent = message;
            
            document.body.appendChild(announcement);
            
            setTimeout(() => {
                document.body.removeChild(announcement);
            }, 1000);
        }

        // Navigation clavier améliorée
        document.addEventListener('keydown', (e) => {
            // Échapper pour revenir aux formations
            if (e.key === 'Escape') {
                window.location.href = '/dashboard/formations';
            }
            
            // Raccourcis clavier
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'h': // Ctrl+H pour accueil
                        e.preventDefault();
                        window.location.href = '/dashboard';
                        break;
                    case 'b': // Ctrl+B pour retour
                        e.preventDefault();
                        window.history.back();
                        break;
                }
            }
        });

        // Gestion du focus pour navigation au clavier
        const focusableElements = document.querySelectorAll(
            'a[href], button:not([disabled]), input:not([disabled]), select:not([disabled]), textarea:not([disabled]), [tabindex]:not([tabindex="-1"])'
        );

        // Smooth scroll pour les ancres avec animation réduite si préférée
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                    target.scrollIntoView({
                        behavior: reducedMotion ? 'auto' : 'smooth',
                        block: 'start'
                    });
                    
                    // Focus sur l'élément cible pour l'accessibilité
                    target.focus();
                }
            });
        });

        // Gestion de l'état sticky du sidebar
        window.addEventListener('scroll', () => {
            const sidebar = document.querySelector('.purchase-card');
            const scrollTop = window.pageYOffset;
            
            if (scrollTop > 300) {
                sidebar.style.boxShadow = '0 20px 60px rgba(0,0,0,0.15)';
            } else {
                sidebar.style.boxShadow = '0 15px 50px rgba(0,0,0,0.08)';
            }
        });

        // Performance monitoring
        if ('performance' in window) {
            window.addEventListener('load', () => {
                setTimeout(() => {
                    const loadTime = performance.now();
                    console.log(`Page formation chargée en ${Math.round(loadTime)}ms`);
                    
                    // Envoyer les métriques de performance si nécessaire
                    if (typeof gtag !== 'undefined') {
                        gtag('event', 'page_load_time', {
                            event_category: 'Performance',
                            event_label: 'Formation Detail',
                            value: Math.round(loadTime)
                        });
                    }
                }, 0);
            });
        }

        // Gestion des erreurs globales
        window.addEventListener('error', (e) => {
            console.error('Erreur JavaScript:', e.error);
            announceToScreenReader('Une erreur est survenue. Veuillez actualiser la page si le problème persiste.');
        });

        // Initialisation
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Page formation "<%- formation.title %>" chargée');
            console.log('Formation ID: <%- formation.id %>');
            console.log('Modules: <%- formation.modules.length %>');
            console.log('Note: <%- formation.rating %>/5');
            
            // Annoncer le contenu principal aux lecteurs d'écran
            announceToScreenReader(`Page de formation ${document.title} chargée. ${formation.modules.length} modules disponibles.`);
        });
    </script>
</body>
</html>