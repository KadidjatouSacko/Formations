        }

        // Fonction pour annoncer aux lecteurs d'écran
        function announceToScreenReader(message) {
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'polite');
            announcement.setAttribute('aria-atomic', 'true');
            announcement.className = 'sr-only';
            announcement.textContent = message;
            
            document.body.appendChild(announcement);
            
            setTimeout(() => {
                document.body.removeChild(announcement);
            }, 1000);
        }

        // Support clavier
        document.addEventListener('keydown', (e) => {
            // Raccourcis clavier
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'f': // Ctrl+F pour formations
                        e.preventDefault();
                        window.location.href = '/dashboard/formations';
                        break;
                    case 'h': // Ctrl+H pour aide
                        e.preventDefault();
                        openChat();
                        break;
                }
            }
            
            // Échapper pour fermer les éléments
            if (e.key === 'Escape') {
                // Fermer chat ou autres éléments ouverts
            }
        });

        // Header scroll effect
        let lastScrollTop = 0;
        const header = document.querySelector('header');

        window.addEventListener('scroll', () => {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            if (scrollTop > 100) {
                header.style.boxShadow = '0 5px 30px rgba(0,0,0,0.15)';
            } else {
                header.style.boxShadow = '0 2px 20px rgba(0,0,0,0.08)';
            }
        });

        // Smooth scroll pour les liens
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                    target.scrollIntoView({
                        behavior: reducedMotion ? 'auto' : 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Message de bienvenue au chargement
        window.addEventListener('load', () => {
            setTimeout(() => {
                console.log('🚀 FormaPro+ - Plateforme de formation chargée avec succès !');
                console.log('📚 <%= stats.totalModules %> modules de formation disponibles');
                console.log('👥 Rejoignez plus de <%= stats.studentsCount %> professionnels déjà formés');
            }, 1000);
        });

        // Effet parallaxe léger sur le hero
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.hero');
            if (hero && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
                hero.style.transform = `translateY(${scrolled * 0.2}px)`;
            }
        });

        // Gestion des erreurs globales
        window.addEventListener('error', (e) => {
            console.error('Erreur JavaScript:', e.error);
            announceToScreenReader('Une erreur est survenue. Veuillez actualiser la page si le problème persiste.');
        });

        // Initialisation
        document.addEventListener('DOMContentLoaded', () => {
            announceToScreenReader('Page FormaPro+ chargée. Plateforme de formation pour professionnels de l\'aide à domicile et EHPAD.');
            
            // Prélancer les animations si pas de préférence pour mouvement réduit
            if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
                setTimeout(() => {
                    document.querySelectorAll('.fade-in, .slide-in-left').forEach(el => {
                        if (el.getBoundingClientRect().top < window.innerHeight) {
                            observer.observe(el);
                        }
                    });
                }, 100);
            }
        });
    </script>
