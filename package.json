{
  "name": "formapro-platform",
  "version": "1.0.0",
  "description": "FormaPro+ - Plateforme de formation professionnelle avec modules ES6",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --experimental-vm-modules",
    "test:watch": "jest --experimental-vm-modules --watchAll",
    "test:coverage": "jest --experimental-vm-modules --coverage",
    "migrate": "node utils/migrate.js",
    "seed": "node utils/seed.js",
    "setup-db": "npm run migrate && npm run seed",
    "reset-db": "npm run setup-db",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "echo 'No build needed for this project'",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "install-all": "npm install",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "dev:debug": "nodemon --inspect index.js"
  },
  "keywords": [
    "formation",
    "e-learning",
    "plateforme",
    "nodejs",
    "postgresql",
    "modules",
    "es6",
    "express"
  ],
  "author": "FormaPro+ Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "nodemonConfig": {
    "watch": [
      "*.js",
      "routes/",
      "middleware/",
      "utils/",
      "config/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "public/",
      "uploads/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/formapro-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/formapro-platform/issues"
  },
  "homepage": "https://github.com/your-username/formapro-platform#readme"
}
